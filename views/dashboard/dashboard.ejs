<%- include ("../partials/header") %>

    <head>
        <link rel="stylesheet" href="/stylesheets/dashboard.css">
        <title>Dashboard</title>
    </head>

    <body>
        <div class="header">
            <div class="nav">
                <div class="logo">
                    <img class="anchorLogo" src="/icons/anchor-white.png" alt="">
                    <h1 class="arc">Arcane</h1>
                </div>
                <div class="link">
                    <a href="/">Home</a>
                    <a href="/upload">Upload</a>
                    <a href="/logout">Logout</a>
                </div>
                <div class="searchBox">
                    <img src="/icons/search.png" alt="">
                    <input type="text" placeholder="Search Arcane">
                </div>
                <img id="userPfp"
                    src="https://yt3.ggpht.com/a/AATXAJyAjXWhg85XlBUBufDpYQ7zB7GIiIlg9js4_wCoFA=s900-c-k-c0xffffffff-no-rj-mo"
                    alt="">
            </div>
        </div>
        <div class="content">
            <div class="content-01">
                <div class="chart">
                    <div class="user_pfp">
                        <img class="" src="/images/cat.jpeg" alt="">
                    </div>
                    <div class="user_name">
                        <h1>CR</h1>
                    </div>     
                    <div class="user_aboutMe">
                        just a dude who writes code and plays games...
                        <button onclick="redirect()" class="edit_profile" >Edit Profile</button>
                    </div>             
                </div>
                <div class="data-01">
                    <div class="files_tabs">
                        <% allFiles.forEach(function(file){ %>
                            <div class="files">
                                <div style="display: flex; flex-direction: column;">
                                    <a class="file_name" href="#"><%= file.name %></a>
                                    <span><%= file.description %></span>
                                </div>
                                <div class="file_info">
                                    <img class="favStar" src="/images/favStar.png" alt="">
                                    <h5 class="user_file_upload_time">Uploaded by <a class="upload_lstime" href="#">CyberRodeo</a></h5>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
            <div class="footerGod"> 
                <div class="footer">
                    <div  class="footer_link">
                        <img class="footer_logo" src="/icons/anchor-white.png" alt="">
                        2023&copy;Arcane
                    </div>
                    <div class="footer_link">
                        <a href="">Home</a>
                    </div>
                    <div class="footer_link">
                        <a href="/logout">Logout</a>
                    </div>
                    <div class="footer_link">
                        <a href="">About Us</a>
                    </div>
                    <div class="footer_link">
                        <a href="">Upload</a>
                    </div>
                    <div class="footer_link">
                        <a href="">Files</a>
                    </div>
                </div>
            </div>
        </div>
        <script src="/scripts/dashboard.js"></script>
        
        <%- include ("../partials/footer") %>